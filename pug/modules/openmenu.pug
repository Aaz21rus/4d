-var catalog = ["Каталог","О компании","Условия сотрудничества","Материалы для бизнеса","Вопросы и ответы","Инфо-блог","Контакты"]
-var kind = ["Бытовая пиротехника","Сценическая пиротехника","Профессиональная пиротехника"]
-var good = ["Петарды","Цветной дым","Летающие фейерверки","Тортовые свечи","Бенгальские огни","Ракеты","Римские свечи","Батареи салютов","Фонтаны","Фестивальные шары"]

.wrapper.pos
  .openmenu-container
    ul.catalog-list
      each i in catalog
        li.item-catalog
          a.catalog-href(href="#")=i
    ul.kind-list
      each j in kind
        li.item-kind
          a.kind-href(href="#")=j
    .container
      ul.good-list
        each k in good
          li.item-good
            a.good-href(href="#")=k
      .form-container
        form.form-order
          .head-container
            .h3-container
              h3.order-h3 Заказать звонок
            button.order-close
          label.order-label(for="order-name")
          .input-group
            .icon
            input.order-input(type="text" name="name" placeholder="Ваше имя" id="order-name")
          label.order-label(for="order-phone")
          .input-group
            .icon.phone
            input.order-input(type="text" name="phone" placeholder="Телефон" id="order-phone")
          p.order-terms
            input.order-agreement(id="order-agreement" type="checkbox")
            label.order-agree(for="order-agreement") Я согласен с политикой конфиденцильности
          input.order-btn(type="submit" value="Отправить заявку" disabled="disabled")








